<div id = "common-container">
    <div id = "side-menu">
        <%= render "homes/side_menu" %>
    </div>
    <div id = "management-top">
        <%= render "menu_links" %>
        <div id = "attendance-container">
            <div id = "attendance-menu">
                <div id = "date-form">
                    <h2><i class="fas fa-list-alt"></i> 勤怠情報</h2>
                    <%= link_to "本日DL", managements_import_attendance_path(period: "day", format: :csv) %>
                    <%= link_to "週間DL", managements_import_attendance_path(period: "week", format: :csv) %>
                    <%= link_to "月間DL", managements_import_attendance_path(period: "month", format: :csv) %>
                    
                    <%= form_with url: managements_import_attendance_path(format: :csv), method: :get, local: true do |f| %>
                        <%= f.date_field :start_time %>
                        <span>➡️</span>
                        <%= f.date_field :finish_time %>
                        <%= f.submit "期間指定DL", class: "btn" %>
                    <% end %>
                </div>
                <div id = "attendance-table-container">
                    <div id = "attendance-table">
                        <div id = "attendance-table-search">
                            <%= form_with url: managements_attendance_search_path, method: :get do |f| %>
                                <div class = "form-field">
                                    <%= f.text_field :name, placeholder: "ユーザー名" %>
                                </div>
                                <div class = "form-field">
                                    <%= f.select :department, [["人事部", "人事部"],["開発部", "開発部"],["営業部", "営業部"]], {include_blank: "部署選択"} %>
                                </div>
                                <div class = "form-field">
                                    <%= f.date_field :date, value: DateTime.now.strftime("%Y-%m-%d") %>
                                </div>
                                <%= f.submit "検索", class: "btn" %>
                            <% end %>
                        </div>
                        <%= render "attendance_table" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

