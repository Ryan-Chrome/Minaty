<div id = "PasswordEdit" class = "user-form">

  <h2>パスワード再設定</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "New-Password(半角英数字#{ @minimum_password_length }文字以上)", style: "#{"color: rgba(192, 26, 26, 0.795);" if @user.errors.include?(:password) }" %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "New-Password(確認用)", style: "#{"color: rgba(192, 26, 26, 0.795);" if @user.errors.include?(:password_confirmation) }" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form" %>
    </div>

    <div class="actions">
      <%= f.submit "パスワード変更" %>
    </div>
  <% end %>

  <div class = "links">
    <%= render "devise/shared/links" %>
  </div>

</div>
