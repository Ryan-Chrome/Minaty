<div id = "loginContent">

  <h2>Login</h2>

  <p style="color: red;"><%= flash[:alert] %></p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, "Eメール", class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "form" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード", class: "label" %>
      <%= f.password_field :password, class: "form" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="check-box-field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, id: "check-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn" %>
    </div>
  <% end %>

</div>