
var group_search_section = document.getElementById("group-search-list");
group_search_section.style.display = "none";
var user_search_list_section = document.getElementById("group-search-section");
user_search_list_section.insertAdjacentHTML("beforeend", "<%= j(render "homes/user_search_section") %>");

var clock_container = document.getElementsByClassName("clock-container")[0];
var clock_height = clock_container.clientHeight;

var user_search_section = document.getElementById("user-search-list");
var user_search_section_back_btn = document.getElementById("user-search-section-back-btn");
var contact_group_delete_btn = document.getElementById("group-delete-link");

user_search_section.style.height =  `calc(100% - ${clock_height}px)`; 

user_search_section_back_btn.onclick = () => {
    user_search_section_back_btn.remove();
    user_search_section.remove();
    if(contact_group_delete_btn){
        contact_group_delete_btn.remove();
    }
    group_search_section.style.display = "block";
}