    </li>

    <%= link_to root_path, data: {"turbolinks"=>false} do %>
      <li>
        <span><i class="fas fa-home"></i>ホーム</span>
      </li>
    <% end %>
    <%= link_to meeting_rooms_path, data: {"turbolinks"=>false} do %>
      <li>     
        <span><i class="fas fa-headset"></i>ミーティング</span>
      </li>
